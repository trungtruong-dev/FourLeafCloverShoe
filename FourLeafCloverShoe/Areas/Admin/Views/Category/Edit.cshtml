@model FourLeafCloverShoe.Share.Models.Category


@{
    ViewBag.Title = "Cập nhật";
    ViewBag.pTitle = "Loại sản phẩm";
    ViewBag.pTitleLink = "Category";

}

<div class="row">
    <!-- [ sample-page ] start -->
    <div class="col-xl-12">
        <div class="card">
            <form method="post" asp-action="Edit">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="form-label">Tên loại giày</label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="Nhập tên loại giày">
                        <input asp-for="Id" type="text" class="form-control" hidden>
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                    <div class="col-sm-12">
                            <div class="card-body text-end btn-page">
                                <button type="submit" class="btn btn-primary mb-0">Lưu thay đổi</button>
                            </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- [ sample-page ] end -->
    </div>
</div>


