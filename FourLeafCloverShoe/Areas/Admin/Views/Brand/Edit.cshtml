@model FourLeafCloverShoe.Share.Models.Brand

@{
    ViewData["Title"] = "Edit";
    ViewBag.pTitleLink = "Brand";

}

<div class="row">
    <!-- [ sample-page ] start -->
    <div class="col-xl-12">
        <div class="card">
            <form method="post" asp-action="Edit">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="form-label">Tên hãng</label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="Nhập tên hãng">
                        <input asp-for="Id" type="text" class="form-control" hidden>
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                    <div class="col-sm-12">
                        <div class="card-body text-end btn-page">
                            <button type="submit" class="btn btn-primary mb-0">Lưu thay đổi</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- [ sample-page ] end -->
    </div>
</div>
@Html.Partial("~/Areas/Admin/Shared/_ErrorMessage.cshtml")