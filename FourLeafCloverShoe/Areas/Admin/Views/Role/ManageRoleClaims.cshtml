@using FourLeafCloverShoe.Share.ViewModels;
@model RoleClaimsViewModel
@{
    ViewBag.Title = "Quản lí quyền";
    ViewBag.pTitle = "Chức vụ";
    ViewBag.pTitleLink = "Role";

}


<div class="row">
    <!-- [ sample-page ] start -->
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header">
                <h5>Quản lí quyền</h5>
            </div>
            <form method="post">
                <input type="hidden" asp-for="RoleId" />
                @for (int i = 0; i < Model.Claims.Count; i++)
                {
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input class="form-check-input input-primary" asp-for="@Model.Claims[i].IsSelected" />
                            <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">@Model.Claims[i].ClaimType</label>
                        </div>
                    </div>
                    
                }
                <div class="col-sm-12">
                        <div class="card-body text-end btn-page">
                            <button type="submit" class="btn btn-primary mb-0">Lưu thay đổi</button>
                    </div>
                </div>

            </form>
        </div>
        <!-- [ sample-page ] end -->
    </div>
</div>


